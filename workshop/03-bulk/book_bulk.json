POST /_bulk
{"delete":{"_index":"store","_type":"book","_id":"1001"}}
{"create":{"_index":"store","_type":"book","_id":"1001"}}
{"title":"My new book"}
{"index":{"_index":"store","_type":"book"}}
{"title":"My second book"}
{"update":{"_index":"store","_type":"book","_id":"1001","retry_on_conflict":3}}
